<div class="content">
<div class="card">
  <div class="card-header d-md-flex ">
    <h5 class="mb-0">State</h5>
    <div class="collapse d-lg-block my-lg-auto ms-lg-auto">
     <%= link_to 'New state', new_state_path, class: "btn btn-warning me-3", style: 'color:black' %>
     <%= link_to "Export to csv", states_path(format: 'csv'), class: "btn btn-success", style: 'color:white' %>
    </div>
  </div>
<table class="table" id="states-datatable" data-source="<%= states_path(format: :json) %>">
 <thead>
  <tr>
    <th>Name</th>
    <th>Abbreviation</th>
    <th>Country</th>
    <th>Active</th>
    <th class="text-center" data-orderable="false">Actions</th>
  </tr>
 </thead>

 <tbody>
  
 </tbody>
</table>
</div>
</div>
<%= form_tag import_states_path, method: :post, multipart: true do %>
  <%= file_field_tag :file, accept: ".csv" %>
  <%= submit_tag '⚙️ Import' %>
<% end %>
