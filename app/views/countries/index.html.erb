<div class="content">
<div class="card">
  <div class="card-header d-md-flex ">
    <h5 class="mb-0">Country</h5>
    <div class="collapse d-lg-block my-lg-auto ms-lg-auto">
     <%= link_to 'New country', new_country_path, class: "btn btn-warning me-3", style: 'color:black' %>
     <%= link_to "Export to csv", countries_path(format: 'csv'), class: "btn btn-success me-3", style: 'color:white' %>
    </div>
  </div>
<table class="table" id="countries-datatable" data-source="<%= countries_path(format: :json) %>">
 <thead>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th class="text-center">Actions</th>
  </tr>
 </thead>
 <tbody>
  
 </tbody>
</table>
</div>
</div>
<%= form_tag import_countries_path, method: :post, multipart: true do %>
  <%= file_field_tag :file, accept: ".csv" %>
  <%= submit_tag '⚙️ Import' %>
<% end %>
